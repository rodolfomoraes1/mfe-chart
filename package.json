{
  "name": "@rodolfomoraes1/mfe-chart",
  "version": "1.0.0",
  "description": "Angular chart component as Web Component - Mind Ease",
  "main": "dist/mfe-chart/browser/main.js",
  "module": "dist/mfe-chart/browser/main.js",
  "types": "dist/mfe-chart/browser/index.d.ts",
  "files": [
    "dist/mfe-chart/browser/**/*.js",
    "dist/mfe-chart/browser/**/*.css"
  ],
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build --configuration=production --output-hashing=none",
    "build:mfe": "ng build --configuration=production --output-hashing=none",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "preview": "serve dist/mfe-chart/browser -p 3000",
    "prepublishOnly": "npm run build",
    "publish:public": "npm publish --access public"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "keywords": [
    "angular",
    "webcomponent",
    "chart",
    "microfrontend",
    "mind-ease",
    "tdah"
  ],
  "author": "Rodolfo Moraes",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rodolfomoraes1/mfe-chart.git"
  },
  "bugs": {
    "url": "https://github.com/rodolfomoraes1/mfe-chart/issues"
  },
  "homepage": "https://github.com/rodolfomoraes1/mfe-chart#readme",
  "peerDependencies": {
    "chart.js": "^4.5.1"
  },
  "dependencies": {
    "@angular/common": "^21.1.0",
    "@angular/compiler": "^21.1.0",
    "@angular/core": "^21.1.0",
    "@angular/elements": "^21.1.5",
    "@angular/forms": "^21.1.0",
    "@angular/platform-browser": "^21.1.0",
    "@angular/router": "^21.1.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0"
  },
  "devDependencies": {
    "@angular/build": "^21.1.4",
    "@angular/cli": "^21.1.4",
    "@angular/compiler-cli": "^21.1.0",
    "jsdom": "^27.1.0",
    "typescript": "~5.9.2",
    "vitest": "^4.0.8"
  }
}